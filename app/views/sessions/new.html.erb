<h1>ログイン</h1>

<%= form_with(url: login_path, local: true) do |form| %>
  <div>
    <%= form.label :email, "メールアドレス" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>

<%= link_to "ユーザー登録はこちら", new_user_path %>